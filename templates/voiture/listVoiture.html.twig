{% extends 'base.html.twig' %}

{% block title %}Liste des Voitures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .car-table {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 2rem;
        }
        .car-table thead {
            background-color: #2c3e50;
            color: white;
        }
        .car-table th {
            padding: 15px;
            text-transform: uppercase;
            font-size: 0.9em;
            letter-spacing: 0.1em;
        }
        .car-table td {
            padding: 12px 15px;
            vertical-align: middle;
        }
        .car-table tbody tr:hover {
            background-color: #f5f6fa;
            transform: scale(1.005);
            transition: all 0.2s ease;
        }
        .action-buttons {
            display: flex;
            gap: 8px;
        }
        .btn-add-car {
            background-color: #2ecc71;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        .btn-add-car:hover {
            background-color: #27ae60;
            transform: translateY(-2px);
        }
        .price-tag {
            font-weight: bold;
            color: #2c3e50;
        }
        .alert {
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success shadow-sm">
                {{ message }}
            </div>
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2">Gestion des Voitures</h1>
            <a href="{{ path('voiture_new') }}" class="btn btn-add-car">
                <i class="fas fa-plus-circle me-2"></i>Ajouter une voiture
            </a>
        </div>

        <div class="car-table">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Série</th>
                        <th>Modèle</th>
                        <th>Mise en service</th>
                        <th>Prix/Jour</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for voiture in voitures %}
                    <tr>
                        <td>{{ voiture.id }}</td>
                        <td><strong>{{ voiture.serie }}</strong></td>
                        <td>{{ voiture.modele }}</td>
                        <td>{{ voiture.dateMiseEnMarche|date('d/m/Y') }}</td>
                        <td class="price-tag">{{ voiture.prixJour|number_format(2, ',', ' ') }} DT</td>
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('voiture_edit', {'id': voiture.id}) }}" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>
                                <a href="{{ path('voiture_delete', {'id': voiture.id}) }}" 
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette voiture ?')">
                                    <i class="fas fa-trash-alt me-1"></i>Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4">
                            <em class="text-muted">Aucune voiture disponible</em>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}