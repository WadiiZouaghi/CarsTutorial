{% extends 'base.html.twig' %}

{% block title %}Ajouter une voiture{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        .form-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f1f1f1;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }
        .form-control {
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 0.75rem;
        }
        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }
        .btn-group {
            margin-top: 2rem;
            display: flex;
            gap: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h1 class="h3">Ajouter une nouvelle voiture</h1>
            </div>

            <form method="post">
                <div class="form-group">
                    <label for="serie" class="form-label">Numéro de série</label>
                    <input type="text" class="form-control" id="serie" name="serie" 
                           placeholder="Ex: ABC123" required>
                </div>

                <div class="form-group">
                    <label for="modele" class="form-label">Modèle</label>
                    <input type="text" class="form-control" id="modele" name="modele" 
                           placeholder="Ex: BMW X6" required>
                </div>

                <div class="form-group">
                    <label for="dateMiseEnMarche" class="form-label">Date de mise en service</label>
                    <input type="date" class="form-control" id="dateMiseEnMarche" 
                           name="dateMiseEnMarche" required>
                </div>

                <div class="form-group">
                    <label for="prixJour" class="form-label">Prix par jour (DT)</label>
                    <input type="number" step="0.01" class="form-control" id="prixJour" 
                           name="prixJour" placeholder="Ex: 150.00" required>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                    <a href="{{ path('voiture_liste') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}